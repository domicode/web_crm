<% content_for :title do %>
All contacts
<% end %>

    <form action="/order" class="order" method="get">      
      <div class="sort">
        <select name="order">
          <option value="last_name">choose contact order</option>
          <option value="last_name">Last name</option>
          <option value="first_name">First name</option>
          <option value="address">Address</option>
          <option value="postcode">Zip code</option>
          <option value="place">Place</option>
          <option value="email">email</option>
        </select>
      </div>
      <fieldset>
        <input type="submit" class="orderbutton" value="GO">
      </fieldset>
    </form>


<div class="all_contacts">
      <% @contacts.each do |contact| %>
        <div class="contact">
        <ul>
          <li><%= contact.first_name %> <%= contact.last_name %></li>
          <li><%= contact.address %></li>
          <li><%= contact.postcode %> <%= contact.place %></li>
          <li><%= contact.email %></li>
          <li>Notes:<br><%= contact.notes %></li>
        </ul>
          <div class="datetime">Created on: <%= contact.created_on %></div>
          <div class="edit"><a href="/contacts/<%= contact.id %>/edit">+</a></div>
        </div>
      <% end %>
    </ul>
</div>